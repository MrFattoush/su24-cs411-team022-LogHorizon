<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign In - Game Recommender</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/login.css" rel="stylesheet">
  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
      <form action="/login" method="POST">
        <div class="text-center mb-4">
          <h1 class="h3 mb-3 fw-normal">ðŸŽ® Game Recommender</h1>
          <p class="text-muted">Sign in to get AI-powered game recommendations</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>

        <div class="form-floating">
          <input type="text" class="form-control" id="floatingInput" name="username" placeholder="Username" required>
          <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
          <label for="floatingPassword">Password</label>
        </div>

        <div class="form-check text-start my-3">
          <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            Remember me
          </label>
        </div>
        
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        
        <div class="text-center mt-3">
          <small class="text-muted">Don't have an account? <a href="/signup">Sign up here</a></small>
        </div>
        
        <div class="text-center mt-2">
          <small class="text-muted">Demo: <strong>demo</strong> / <strong>demo</strong></small>
        </div>
        
        <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2024 Game Recommender</p>
      </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

